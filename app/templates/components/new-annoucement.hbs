{{#if addNewAnnouncement}}
  <h1>New Announcement</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="messageType">Announcement Type</label>
        {{input value=messageType id="messageType"}}
      </div>

      <div class="form-group">
        <label for="message">Announcement</label>
        {{input value=message id="message"}}
      </div>
    <button {{action 'saveAnnouncement'}}>Save</button>
    </form>
  </div>
{{else}}
<button {{action 'announcementFormShow'}}>New Announcement</button>
{{/if}}
  </div>
